{
  "$id": "http://dont-code.net/v1/plugin-config-schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "JSON Schema v1 for plugins to update the dont-code schema",
  "type": "object",
  "required": [
    "plugin"
  ],
  "properties": {
    "plugin": {
      "$ref": "#/definitions/plugin"
    },
    "schema-updates": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/schema-update"
      }
    }
  },
  "definitions": {
    "plugin": {
      "type": "object",
      "required": ["id","version"],
      "properties": {
        "id": {
          "type": "string"
        },
        "display-name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    },
    "schema-update": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "changes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/change"
            }
          }
        }
      },
    "change": {
      "type": "object",
      "properties": {
        "location": {
          "$ref": "#/definitions/change-location"
        },
        "add": {
          "$ref": "#/definitions/additem"
        },
        "props": {
          "$ref": "#/definitions/itemprops"

        } ,
        "replace": {
        "type": "boolean"
        }
      }
    },
    "change-location": {
      "type": "object",
      "required": ["parent","id"],
      "properties": {
        "parent": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "before": {
          "type": "string"
        },
        "after": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "additem": {
      "type": "object",
      "properties": {
      },
      "additionalProperties": true
    },
    "itemprops": {
      "type": "object",
      "properties": {
      },
      "additionalProperties": true
    }
  }
}
